@model Movie_App_2._0.Models.ReviewDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this review?</h2>
<a href="/Movie/List">Cancel</a>
<h2>@Model.ReviewTitle</h2>
<div>Status: @Model.AlreadyPosted</div>
<form action="/Review/Delete/@Model.ReviewID" method="POST">
    <input type="submit" value="Confirm Delete" />

</form>

